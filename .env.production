# Variables de entorno para producción
# Reemplaza 'tu-dominio.com' con tu dominio real de DigitalOcean

# URL base de la API (backend)
VITE_API_BASE_URL=https://tu-dominio.com/api

# URL del WebSocket para streaming en tiempo real
VITE_WEBSOCKET_URL=wss://tu-dominio.com

# URL base de la aplicación
VITE_APP_BASE_URL=https://tu-dominio.com

# Configuración de Bunny CDN (si aplica)
VITE_BUNNY_CDN_URL=https://tu-bunny-cdn.b-cdn.net

# Configuración de DigitalOcean Spaces (si aplica)
VITE_DO_SPACES_URL=https://tu-space.fra1.digitaloceanspaces.com

# Modo de producción
NODE_ENV=production

# Puerto para el servidor (DigitalOcean usa el puerto asignado automáticamente)
PORT=8080