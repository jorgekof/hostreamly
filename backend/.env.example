# ===========================================
# BACKEND ENVIRONMENT VARIABLES - EXAMPLE
# ===========================================
# Copia este archivo como .env y configura los valores apropiados

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
FRONTEND_URL=http://localhost:3000

# Database Configuration (MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hostreamly
DB_USER=hostreamly_user
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=hostreamly:
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_here

# Bunny.net Configuration
# Main API Key for CDN and general operations
BUNNY_API_KEY=your_bunny_api_key_here

# Bunny Stream Configuration (Video Hosting)
BUNNY_STREAM_API_KEY=your_bunny_stream_api_key_here
BUNNY_STREAM_LIBRARY_ID=your_bunny_stream_library_id
BUNNY_STREAM_COLLECTION_ID=your_bunny_stream_collection_id
BUNNY_STREAM_WEBHOOK_SECRET=your_bunny_stream_webhook_secret

# Bunny Storage Configuration (File Storage)
BUNNY_STORAGE_API_KEY=your_bunny_storage_api_key_here
BUNNY_STORAGE_ZONE_NAME=your_storage_zone_name
BUNNY_STORAGE_REGION=de
BUNNY_STORAGE_HOSTNAME=storage.bunnycdn.com

# CDN Configuration
BUNNY_CDN_HOSTNAME=your_cdn_hostname.b-cdn.net
BUNNY_CDN_PROXY=false

# DRM and Security
BUNNY_DRM_ENABLED=true
BUNNY_TOKEN_AUTH_ENABLED=true
BUNNY_HOTLINK_PROTECTION=true

# Agora Configuration
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate
AGORA_CUSTOMER_ID=your_agora_customer_id
AGORA_CUSTOMER_SECRET=your_agora_customer_secret
AGORA_REGION=us

# File Upload Configuration
UPLOAD_MAX_SIZE=5368709120
UPLOAD_ALLOWED_TYPES=video/mp4,video/avi,video/mov,video/wmv,video/flv,video/webm,video/mkv
UPLOAD_TEMP_DIR=./temp

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@hostreamly.com
FROM_NAME=Hostreamly

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d
LOG_DIR=./logs

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=5
FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=1800000

# Premium Features
PREMIUM_STORAGE_LIMIT=107374182400
PREMIUM_BANDWIDTH_LIMIT=1073741824000
FREE_STORAGE_LIMIT=1073741824
FREE_BANDWIDTH_LIMIT=10737418240

# Analytics and Monitoring
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Google Analytics Configuration
GA_TRACKING_ID=G-XXXXXXXXXX
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GA_API_SECRET=your_google_analytics_api_secret

# Development/Debug
DEBUG=bunnyvault:*
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# External Services
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Webhook URLs (for external notifications)
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# CDN and Storage Paths
CDN_BASE_URL=https://your_cdn_hostname.b-cdn.net
STORAGE_BASE_URL=https://storage.bunnycdn.com/your_storage_zone

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=BunnyVault is currently under maintenance. Please try again later.

# Feature Flags
ENABLE_LIVE_STREAMING=true
ENABLE_DRM_PROTECTION=true
ENABLE_TRANSCODING=true
ENABLE_THUMBNAILS=true
ENABLE_ANALYTICS_EXPORT=true
ENABLE_SOCIAL_FEATURES=true

# API Rate Limits
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000
UPLOAD_RATE_LIMIT_MAX=10
STREAM_RATE_LIMIT_MAX=5

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000

# Timezone
TZ=UTC