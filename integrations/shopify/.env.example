# Configuración de la aplicación de Shopify
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret_here
SHOPIFY_APP_URL=https://your-app-domain.com
SHOPIFY_APP_PORT=3001

# Configuración de Hostreamly
HOSTREAMLY_API_BASE=http://localhost:8080/api
HOSTREAMLY_API_KEY=your_hostreamly_api_key_here

# Base de datos (opcional, para almacenar configuraciones)
DATABASE_URL=sqlite:./shopify_app.db

# Configuración de sesiones
SESSION_SECRET=your_session_secret_here

# Configuración de desarrollo
NODE_ENV=development
DEBUG=shopify:*

# Configuración de CORS
ALLOWED_ORIGINS=https://admin.shopify.com,https://*.myshopify.com

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/shopify-app.log